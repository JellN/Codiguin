<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg1"
    android:weightSum="8"
    tools:context=".view.Tipo_Empresa">

    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/nomeuser"
            android:text="Quase pronto, selecione o tipo da sua empresa"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"/>
        <!-- <EditText
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_margin="5dp"
             android:hint="pesquisar..."
             android:id="@+id/search_user"/>

         <android.support.v7.widget.RecyclerView
             android:layout_below="@id/search_user"
             android:id="@+id/recycler_view"
             android:layout_width="match_parent"
             android:layout_height="20dp"
             ></android.support.v7.widget.RecyclerView>-->
    </RelativeLayout>


    <GridLayout
        android:id="@+id/maingrid"
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:layout_weight="5"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:padding="14dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:rowCount="4"
        >

        <!--row 1-->

        <!--column 1-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"

            >

        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="140dp"
           android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"

            android:orientation="vertical">

            <ImageView
                android:id="@+id/bebidas"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/dep1" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="18dp"
                android:layout_alignBottom="@+id/bebidas"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:text="DEPÓSITO"
                android:textColor="@color/negra"
                android:textStyle="bold"
                android:layout_marginBottom="-20dp"
                ></TextView>
        </RelativeLayout>


        <!--column 2-->

        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="180dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/restaurante"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/rest1" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="18dp"
                android:layout_alignBottom="@+id/restaurante"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:text="RESTAURANTE"
                android:textColor="@color/negra"
                android:textStyle="bold"
                android:layout_marginBottom="-20dp"
                ></TextView>

        </RelativeLayout>


        <!--row 2-->

        <!--column 1-->


        <RelativeLayout

            android:layout_width="120dp"
            android:layout_height="140dp"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/agua"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/agas1" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="18dp"
                android:layout_alignBottom="@+id/agua"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:text="ÁGUA E GÁS"
                android:textColor="@color/negra"
                android:textStyle="bold"
                android:layout_marginBottom="-20dp"
                ></TextView>

        </RelativeLayout>


        <!--column 2-->


        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="180dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/lanchonete"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/lanch1" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="18dp"
                android:layout_alignBottom="@+id/lanchonete"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:text="LANCHONETE"
                android:textColor="@color/negra"
                android:textStyle="bold"
                android:layout_marginBottom="-20dp"
                ></TextView>

        </RelativeLayout>

        </RelativeLayout>

    </GridLayout>

</RelativeLayout>